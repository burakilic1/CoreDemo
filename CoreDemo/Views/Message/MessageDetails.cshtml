@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Detayı</h1>
@Html.Label("Mesaj ID")
@Html.TextBoxFor(x=>x.MessageID,new {@class="form-control"})
@Html.Label("Mesaj Başlığı")
@Html.TextBoxFor(x=>x.Subject,new {@class="form-control"})
<br />
@Html.Label("Mesajı Gönderen")
@Html.TextBoxFor(x=>x.SenderID,new {@class="form-control"})
<br />
@Html.Label("Mesaj Tarihi")
@Html.TextBoxFor(x=>x.MessageDate,new {@class="form-control"})
<br />
@Html.Label("Mesaj")
@Html.TextAreaFor(x=>x.MessageDetails,10,3,new {@class="form-control"})
<br />
<button class="btn btn-success">Guncelle</button>


