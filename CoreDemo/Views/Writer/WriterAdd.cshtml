@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Bilgileri Düzenleme</h4>
                <br />
                <div class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.WriterID,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.WriterName,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresiniz</label>
                        @Html.TextBoxFor(x=>x.WriterMail,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Parola</label>
                        <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" name="pass1" placeholder="Password">
                        @Html.ValidationMessageFor(x=>x.WriterPassword)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Parolayı Doğrulayın</label>
                        <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" name="pass2" placeholder="Password">
                        <p class="text text-danger">@ViewBag.hata</p>
                    </div>
                    <div class="form-group">
                        <label>Yazar Görsel</label>
                        <input type="file" name="WriterImage"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkınızda</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,3,10,new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>

